
<div class="container">
  <h1>Make your mix:</h1>
  <%= simple_form_for([@cocktail, @dose]) do |f|%>
    <%= f.association :ingredient, collection: @ingredients %>
    <%= f.input :description, placeholder: "5cl"%>
    <%= f.submit %>
  <% end %>
  <p><%= link_to "Back to cocktails", root_path, class:"btn btn-primary" %></p>
</div>
