<div class='container'>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col sm-offset-3">
      <h1 class='text-center'>Choose your cocktail</h1>
      <p><%=link_to "Create your cocktail", new_cocktail_path, class:"btn btn-primary", class:"text-center" %></p>
      <ul>
        <% @cocktails.each do |cocktail| %>
          <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
